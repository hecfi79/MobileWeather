<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0C0029"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:fontFamily="@font/montserrat_alternates_black_italic"
        android:text="Hello Ruslan"
        android:textAlignment="center"
        android:textColor="#FF0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.017"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.001" />

    <EditText
        android:id="@+id/town"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_marginTop="0px"
        android:layout_marginHorizontal="100sp"
        android:textAlignment="center"
        android:backgroundTint="#FF0000"
        android:textColorHint="#FF0000"
        android:textColor="#FF0000"
        android:ems="10"
        android:hint="Enter the city"
        android:inputType="textPersonName"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/getweather"
        android:layout_below="@id/town"
        android:layout_marginHorizontal="130sp"
        android:backgroundTint="#FFFFFF"
        android:text="@string/getweather"
        android:textColor="#F50000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/resultinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/getweather"
        android:layout_marginTop="50px"
        android:fontFamily="@font/montserrat_alternates_black_italic"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="60px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.017"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.001" />


</RelativeLayout>